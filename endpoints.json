{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics", 
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all topics",
    "queries": ["author", "topic",   "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": 1527695953341
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an article object of requested article", 
    "queries": [],
    "exampleResponse": {
      "topics": { "author": "BigH", "title": "Footie!", "article_id": 1, "body": "this is the article body!", "topic": "cars","topic": "cars", "created_at":"2020-11-21 19:16:00","votes":1}
    }
  },
  "GET /api/users": {
    "description": "serves an array of all users",
    "queries": [],
    "exampleResponse": {
      "users": [{"username": "harry",
              "avatar_url": "www.msn.com",
              "name": "Harry KK"}]
    }
  },
  "PATCH /api/articles/article_id": {
    "description": "updates the votes for a given article",
    "exampleRequestBody": {"inc_votes" : 1},
    "exampleResponse": {
      "article": 
        {
          "author": "harry",
          "title": "BMW S100RR",
          "article_id": "2",
          "body": "this is the updated article body",
          "created_at": 12345678,
          "votes": 11,
          "comment_count": 1
        }
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all topics",
    "queries": ["topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Motorbikes are amazing",
          "topic": "automotive",
          "author": "bmw",
          "body": "The article..",
          "created_at": 12345678
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "takes an object with username and body properties and creates a new comment",

    "exampleRequestBody": {"username" : "harry", "body": "bmw rules"},
    "exampleResponse": {
          "comment_id": 1,
          "author": "harry",
          "article_id": 1,
          "votes": 1,
          "created_at": 1234567,
          "body": "bmw rules"
        }
      },
      "DELETE /api/comments/:comment_id": {
        "description": "deletes the comment",
        "exampleResponse": "204 status and no content"
        }

}
